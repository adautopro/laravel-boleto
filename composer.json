{
    "name": "adautopro/laravel-boleto",
    "description": "Biblioteca para controle de boletos bancários do Brasil",
    "keywords": [
        "adautopro",
        "boleto",
        "eduardokum",
        "laravel-boleto"
    ],
    "homepage": "https://github.com/adautopro/laravel-boleto",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduardo Gusmão",
            "email": "eduguscontra3@hotmail.com"            
        },
        {
            "name": "Adauto Oliveira",
            "email": "contato@adauto.pro.br",
            "homepage": "https://adauto.pro.br"
        }
    ],
    "require": {
        "php": ">8.2",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "neitanod/forceutf8": "^2.0",
        "setasign/fpdf": "^1.8",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "chillerlan/php-qrcode": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^9.0",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload": {
        "psr-4": {
            "Adautopro\\LaravelBoleto\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adautopro\\LaravelBoleto\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": true
    },
    "scripts": {
        "php-cs-fixer-check": "vendor/bin/php-cs-fixer fix --diff --verbose --dry-run",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --verbose"
    }
}
